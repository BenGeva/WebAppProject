@model OG_Sports.Models.Order
@using OG_Sports.Models

@{
    ViewBag.Title = "המוצר נוסף בהצלחה";
    Layout = "~/Views/Shared/_Layout.cshtml";

    User connectedUser = (User)HttpContext.Current.Session["user"];

    if (connectedUser == null)
    {
        Response.Redirect("~/User/Login");
    }
}

<br/>
<center>
    <h3 style="color: #0cea48;">המוצר נוסף בהצלחה</h3>
    <hr />
    <br />
    <div style="display:flex; margin-right: 39%">
        <button onclick="gotoCart()" class="btn btn-primary"><i class="fas fa-shopping-cart"></i>&nbsp לעגלת הקניות</button>
        <div class="Header-Buttons-Seperator"></div>
        <button onclick="continueShopping()" class="btn btn-primary"><i class="fas fa-cart-plus"></i>&nbsp המשך לקנות</button>
    </div>
</center>

<script type="text/javascript">
    function continueShopping() {
        location.href = '@Url.Action("Index", "Product")';
    }

    function gotoCart() {
        location.href = '@Url.Action("Index", "Order")';
    }
</script>

